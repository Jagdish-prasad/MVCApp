@model IEnumerable<MVCApp.Models.Customer>;
@{
} 
@if(Model.Count()<=0)
            {
                <p Class="test-center text-danger"><h2> Customer was not found at this loction ! </h2> </p>
            }
<table class="table table table-bordered">
    <tr>
        <th>Name</th>
        <th>Email</th>
    </tr>
    @foreach (var Cust in Model)
    {
        <tr>
            <td>
                 @Cust.Name </td>
            <td>@Cust.Email</td>
        </tr>
    }
</table>